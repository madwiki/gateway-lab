{
  "apps": {
    "name": "bitmex-signal",
    "script": "./dist/app.js",
    "watch": false,
    "ignore_watch": ["node_modules", "logs"],
    "max_memory_restart": "800M",
    "error_file": "./logs/app-err.log",
    "out_file": "./logs/app-out.log",
    "log_file": "./logs/combined.log",
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm:ss",
    "max_restarts": 30,
    "autorestart": true
  }
}
